<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include  android:id="@+id/barra" layout="@layout/barra_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/barra" android:layout_margin="30dp">

        <ImageView

            android:id="@+id/item_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/a11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_img"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_img"
            android:text="Diego Antonio Rios Rojas"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@+id/item_img"
            android:text="Programador"
            android:textSize="15dp"
            android:textStyle="italic" />


    </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>